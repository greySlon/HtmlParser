<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abinail.viewmodel.ViewController">
   <bottom>
      <HBox alignment="TOP_RIGHT" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#saveButtonOnClick" text="Save to..." />
            <Button fx:id="startButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#startButtonOnClick" text="Start" />
            <Button fx:id="cancelButton" cancelButton="true" disable="true" mnemonicParsing="false" onAction="#cancelButtonOnClick" text="Cancel" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Options">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#sitemapMenuOnAction" text="Create sitemap.xml">
                     <graphic>
                        <CheckBox fx:id="sitemapCheckBox" disable="true" mnemonicParsing="false" selected="true" />
                     </graphic>
                  </MenuItem>
                  <MenuItem mnemonicParsing="false" onAction="#loadMenuOnAction" text="Load pictures from web-site">
                     <graphic>
                        <CheckBox fx:id="loadCheckBox" disable="true" mnemonicParsing="false" />
                     </graphic>
                  </MenuItem>
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="5.0">
               <children>
                  <ComboBox fx:id="protocolComboBox" onAction="#handleHostInput" prefWidth="150.0" promptText="protocol" />
                  <TextField fx:id="domainTextField" onKeyReleased="#handleHostInput" promptText="domain name" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <TextField fx:id="paramTextField" promptText="query parameters(separate with space):  param1 param2" />
            <ListView fx:id="linkListView" prefHeight="170.0" prefWidth="590.0" />
            <HBox alignment="TOP_RIGHT" spacing="5.0">
               <children>
                  <Label text="Unique url processed " />
                  <Label fx:id="linkProcessedTextField" text="0" />
                  <Label text="of" />
                  <Label fx:id="linkTotalTextField" text="0" />
                  <ProgressBar fx:id="linkProcessedBar" prefWidth="200.0" progress="0.0" />
               </children>
            </HBox>
            <HBox fx:id="loadHbox" disable="true">
               <children>
                  <VBox prefHeight="70.0" prefWidth="530.0" spacing="5.0">
                     <children>
                        <TextField fx:id="matchesTextField" promptText="sequences contained in image adress(separated with space):  folder1 partOfPictureName" />
                        <HBox alignment="TOP_RIGHT" spacing="5.0">
                           <children>
                              <Label fx:id="imgFoundLabel" />
                              <Label fx:id="imgLoadedLabel" text="0" />
                              <Label text="images loaded(" />
                              <Label fx:id="imgLoadedSizeLabel" text="0" />
                              <Label text="bytes)" />
                              <ProgressIndicator fx:id="imgLoadedProgress" progress="0.0" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
